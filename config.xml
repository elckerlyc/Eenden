<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.stippen.eendvogels" 
	version="1.0.1" 
	
	xmlns="http://www.w3.org/ns/widgets" 
	xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Eenden Ganzen Zwanen</name>
    <description>
        Algemene eenden, ganzen en zwanen van Nederland.
    </description>
    <author email="stichting.stippen@gmail.com" href="http://stippen.nl">
        stichting Stippen.nl
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />

	
	
	<gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />
	<plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />
	
	

	<icon  src="www/res/icon/mallardhi.png" height="512" width="512" />
    


    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
